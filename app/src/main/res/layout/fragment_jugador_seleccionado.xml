<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lista_aventuras_rw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.jugador.jugador_seleccionado.JugadorSeleccionadoFragment">


    <TextView
        android:id="@+id/nombre_jugador"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Jugador:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipo_master"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Tipo de Master:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_jugador" />

    <TextView
        android:id="@+id/numero_jugadores"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Numero jugadores:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipo_master" />

    <TextView
        android:id="@+id/motor_juego"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Motor de juego:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero_jugadores" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_aventuras_rv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motor_juego" />
</androidx.constraintlayout.widget.ConstraintLayout>